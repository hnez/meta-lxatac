[Unit]
Description=LXA TAC Daemon
Before=collectd.service

[Service]
Type=notify
Environment="RUST_LOG=tacd=warn"
ExecStart=/usr/bin/tacd
TimeoutStartSec=20
Restart=on-failure
RestartForceExitStatus=100
RestartSec=30
WatchdogSec=3
ExecStopPost=/usr/bin/tacd-failsafe

[Install]
WantedBy=multi-user.target
