image @IMAGE@simg {
    android-sparse {
        image = "@IMAGE@img"
    }
}

image @IMAGE@img {
    size = 2G
    hdimage {
        align = 1M
        partition-table-type = gpt
        fill = true
    }

    partition reserved {
        image = "/dev/null"
        size = 1M
        offset = 1M
    }

    partition root-a {
        image = "root-fs-@IMAGE@ext4"
        partition-type-uuid = "69dad710-2ce4-4e3c-b16c-21a1d49abed3"
        partition-uuid = "e82e6873-62cc-46fb-90f0-3e936743fa62"
        size = 2045M
    }
}

image root-fs-@IMAGE@ext4 {
    ext4 {
        label = "root-fs"
        use-mke2fs = true
    }

    mountpoint = "/"
    size = 2045M
}
